
<odoo>
    <data>

        <record id='cost_center_move_line' model="ir.ui.view">
            <field name="name">cost.center.move.line</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="model">account.move</field>
            <field name="arch" type="xml">
                <xpath
                    expr="//form[1]/sheet[1]/notebook[1]/page[@name='aml_tab']/field[@name='line_ids']/tree[1]/field[@name='analytic_distribution']"
                    position="after">
                    <field name="cost_center_id" />
                    <field name="department_id" />
                </xpath>
                <xpath
                    expr="//form[1]/sheet[1]/notebook[1]/page[@name='aml_tab']/field[@name='line_ids']/tree[1]/field[@name='name']"
                    position="after">
                    <xpath
                        expr="//form[1]/sheet[1]/notebook[1]/page[@name='aml_tab']/field[@name='line_ids']/tree[1]/field[@name='debit']"
                        position="move" />
                    <xpath
                        expr="//form[1]/sheet[1]/notebook[1]/page[@name='aml_tab']/field[@name='line_ids']/tree[1]/field[@name='credit']"
                        position="move" />
                </xpath>
                <xpath
                    expr="//form[1]/sheet[1]/notebook[1]/page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree[1]/field[@name='price_unit']"
                    position="after">
                    <field name="cost_center_id" optional="show" />
                    <field name="department_id" optional="show" />
                </xpath>
            </field>
        </record>

        <record id="view_code_department" model="ir.ui.view">
            <field name="name">hr.department.code</field>
            <field name="inherit_id" ref="hr.view_department_form" />
            <field name="model">hr.department</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="after">
                    <field name="code" />
                </xpath>

            </field>
        </record>


