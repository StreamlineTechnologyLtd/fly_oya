<odoo>
    <data>
        <record id='hrexpense_view_form_extended_cost_center_department' model="ir.ui.view">
            <field name="name">hr.expense.view.form.extended.cost.center.department</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form" />
            <field name="model">hr.expense</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_distribution']" position="after">
                    <field name="cost_center_id" optional="show" />
                    <field name="department_id" optional="show" />
                </xpath>
            </field>
        </record>
        
        <record id="hr_expense_split_extended" model="ir.ui.view">
            <field name="name">Expense split Extended</field>
            <field name="model">hr.expense.split.wizard</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_split"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='analytic_distribution']" position="after">
                    <field name="cost_center_id" optional="show" />
                    <field name="department_id" optional="show" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>