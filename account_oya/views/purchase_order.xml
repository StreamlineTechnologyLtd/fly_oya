<odoo>
    <data>
        <record id='purchase_order_form_extended_cost_center_department' model="ir.ui.view">
            <field name="name">purchase.order.form.extended.cost.center.department</field>
            <field name="inherit_id" ref="purchase.purchase_order_form" />
            <field name="model">purchase.order</field>
            <field name="arch" type="xml">
                <xpath
                    expr="//form[1]/sheet[1]/notebook[1]/page[@name='products']/field[@name='order_line']/tree[1]/field[@name='analytic_distribution']"
                    position="after">
                    <field name="department_id" optional="hide" />
                    <field name="cost_center_id" optional="hide" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>